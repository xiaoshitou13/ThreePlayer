<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主演"
        android:id="@+id/yanyuan"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/yanyuan"
        android:layout_below="@+id/yanyuan"
        android:layout_marginTop="20dp"
        android:text="剧情介绍:"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/jieshao"
        android:layout_marginEnd="16dp"
        android:text="显示更多"
        android:id="@+id/xianshi"
        android:textSize="20sp" />


    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jieshao"
        android:layout_marginTop="70dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>